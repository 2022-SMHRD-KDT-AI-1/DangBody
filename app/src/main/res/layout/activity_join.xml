<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="232dp"
        android:layout_height="136dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:lineSpacingExtra="-8sp"
        android:text="Welcome\nto\nDANGBODY"
        android:textColor="#ffe0b2"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입을해주세요"
        android:textColor="#FFC98F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/edtJoinId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFE0B2"
        android:ems="10"
        android:hint="@string/userId"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/edtJoinNick"
        app:layout_constraintStart_toStartOf="@+id/edtJoinNick"
        app:layout_constraintTop_toBottomOf="@+id/edtJoinNick" />

    <EditText
        android:id="@+id/edtJoinPwcheck"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFE0B2"
        android:ems="10"
        android:hint="@string/userPwCheck"
        android:inputType="textPassword"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/edtJoinPw"
        app:layout_constraintStart_toStartOf="@+id/edtJoinPw"
        app:layout_constraintTop_toBottomOf="@+id/edtJoinPw" />

    <EditText
        android:id="@+id/edtJoinName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFE0B2"
        android:ems="10"
        android:hint="@string/userName"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/edtJoinPwcheck"
        app:layout_constraintStart_toStartOf="@+id/edtJoinPwcheck"
        app:layout_constraintTop_toBottomOf="@+id/edtJoinPwcheck" />

    <EditText
        android:id="@+id/edtJoinPw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFE0B2"
        android:ems="10"
        android:hint="@string/userPw"
        android:inputType="textPassword"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/edtJoinId"
        app:layout_constraintStart_toStartOf="@+id/edtJoinId"
        app:layout_constraintTop_toBottomOf="@+id/edtJoinId" />

    <ImageView
        android:id="@+id/checkImg"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtJoinPwcheck"
        app:layout_constraintStart_toEndOf="@+id/edtJoinPwcheck"
        app:layout_constraintTop_toTopOf="@+id/edtJoinPwcheck"
        app:srcCompat="@android:drawable/ic_delete" />

    <Button
        android:id="@+id/btnJoin2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#ffffff"
        android:text="@string/btnJoin"
        android:textColor="#FF6041"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#FF6041"
        app:strokeWidth="3dp" />

    <EditText
        android:id="@+id/edtJoinNick"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFE0B2"
        android:ems="10"
        android:hint="@string/userNick"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9">

        <Spinner
            android:id="@+id/spinner_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="342dp"
            tools:layout_editor_absoluteY="431dp" />

        <Spinner
            android:id="@+id/spinner_month"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="272dp"
            tools:layout_editor_absoluteY="431dp" />

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="431dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edtJoinPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFE0B2"
        android:ems="10"
        android:hint="@string/userPhone"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/edtJoinName"
        app:layout_constraintStart_toStartOf="@+id/edtJoinName"
        app:layout_constraintTop_toBottomOf="@+id/edtJoinName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="생년월일선택"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/edtJoinPhone"
        app:layout_constraintTop_toBottomOf="@+id/edtJoinPhone" />

</androidx.constraintlayout.widget.ConstraintLayout>