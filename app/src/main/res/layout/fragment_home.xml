<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_home">

    <ImageView
        android:id="@+id/img_dangBody"
        android:layout_width="408dp"
        android:layout_height="331dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/img_dangbody" />

    <ImageView
        android:id="@+id/img_activity"
        android:layout_width="122dp"
        android:layout_height="123dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@+id/img_dangBody"
        app:layout_constraintTop_toBottomOf="@+id/img_dangBody"
        tools:srcCompat="@drawable/dang1" />

    <ImageView
        android:id="@+id/img_record"
        android:layout_width="130dp"
        android:layout_height="117dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_activity"
        app:layout_constraintEnd_toEndOf="@+id/img_dangBody"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toEndOf="@+id/img_activity"
        app:layout_constraintTop_toTopOf="@+id/img_activity"
        app:layout_constraintVertical_bias="0.833"
        tools:srcCompat="@drawable/dang1" />

    <ImageView
        android:id="@+id/img_myPage"
        android:layout_width="39dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_mypage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>